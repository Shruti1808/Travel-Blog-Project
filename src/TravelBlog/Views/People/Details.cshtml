@model TravelBlog.Models.Person

@{
    ViewData["Title"] = "To Do List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />

<h4>Things this person has experienced:</h4>
<table>
    @foreach (var peopleExperience in Model.PeopleExperiences)
    {
        <tr>
            <td>
                @peopleExperience.Experience.Title
            </td>

        </tr>
    }
</table>


<p>@Html.ActionLink("Edit", "Edit", new { id = Model.PersonId }) | @Html.ActionLink("Back to List", "Index")</p>